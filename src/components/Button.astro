---
interface Props {
  title?: string;
  body?: string;
  href?: string;
  id: string;
}

const { href, title, body, id } = Astro.props;
---

<button class="button-card" id={id} title={title}>
  <slot />
</button>
<style>
  .button-card {
    list-style: none;
    display: flex;
    padding: 12px;
    background-color: #23262d;
    color: white;
    border: none;
    cursor: pointer;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .button-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .button-card:is(:hover) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .button-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
